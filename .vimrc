
" use color scheme desert /usr/share/vim/vim73/colors/desert.vim 
colorscheme desert

" ========================TAB relate config=====================================
" when input TAB, translate it to multi SPACE 
set et
" when press BACKSPACE, delete a TAB if needed
set smarttab
" TabSpace is 4
set ts=4

" do not use Up/Down/Left/Right
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
